<div class="container mt-5">
<b><h1 class="text-center">Categories</h1></b>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Section</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.section.name %></td>
        <td><%= link_to 'Show', category, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, class: "btn btn-warning" %>
</div>