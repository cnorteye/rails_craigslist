<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Price:</strong>
  <%= @post.price %>
</p>

<!--
  <p>
    <strong>Neighbourhold:</strong>
    <%= @post.neighbourhold %>
  </p>
