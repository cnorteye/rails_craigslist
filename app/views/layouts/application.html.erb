  </head>
  <style>
      .image-size {
        max-width: 300px;
        max-height: 200px;
}
  </style>

  <body>
    <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    
  <div class="container mt-3">
    <%= yield %>
  </div>
  </body>
</html>
